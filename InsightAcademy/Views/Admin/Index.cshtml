@model List<InsightAcademy.Entities.User>



    <div class="tu-datatable">
        <table class="table" id="userTable">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Phone</th>
                    <th>Website</th>
                    <th>City</th>
                    <th>Country</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count != 0)
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                        @if (user.IsDeleted)
                        {
                            <td class="text-muted">@user.Email</td>

                        }
                        else
                        {
                            <td class="text-info">@user.Email</td>
                            
                        }
                        <td>@user.Role</td>
                            <td>@user.Phone</td>
                            <td>@user.Website</td>
                            <td>@user.City</td>
                            <td>@user.Country</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>



@section scripts {
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "paging": true, 
                "searching": true 
            });
        });
    </script>
}
